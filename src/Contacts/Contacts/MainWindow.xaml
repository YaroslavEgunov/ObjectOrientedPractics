<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contacts" Height="604" Width="683" Icon="icons8-карточка-контакта-64.png" ResizeMode="NoResize">
    <Grid Margin="0,0,0,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="211*"/>
            <RowDefinition Height="208*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Edit Contact" Margin="15,15,341,47" Grid.RowSpan="2" Width="320" HorizontalAlignment="Left">
            <StackPanel>
                <Label Content="Name:"></Label>
                <TextBox Height="26" TextWrapping="Wrap" Text="Смирнов Юрий" VerticalAlignment="Top" Margin="3,0,3,0"/>
                <Label Content="PhoneNumber:"></Label>
                <TextBox Height="26" TextWrapping="Wrap" Text="+7-962-776-88-03" VerticalAlignment="Top" Margin="3,0,3,0"/>
                <Label Content="Email:"/>
                <TextBox Height="26" TextWrapping="Wrap" Text="gohag84667@maazios.com" VerticalAlignment="Top" Margin="3,0,3,0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Read Contact" Margin="0,15,15,47" Grid.RowSpan="2" HorizontalAlignment="Right" Width="320">
            <StackPanel>
                <Label Content="Name:" Margin="3,0,3,0"></Label>
                <Label Content="Смирнов Юрий" FontWeight="Bold" Margin="3,0,3,0"/>
                <Label Content="PhoneNumber:" Margin="3,0,3,0"></Label>
                <Label Content="+7-962-776-88-03" FontWeight="Bold" Margin="3,0,3,0"></Label>
                <Label Content="Email:" Margin="3,0,3,0"/>
                <Label Content="gohag84667@maazios.com" FontWeight="Bold" Margin="3,0,3,0"></Label>
            </StackPanel>
        </GroupBox>
        <Button Content="Button" Margin="0,0,95,15" Grid.Row="1" Height="25" VerticalAlignment="Bottom" RenderTransformOrigin="-1.92,0.72" HorizontalAlignment="Right" Width="75"/>
        <Button Content="Button" Margin="0,0,15,15" Grid.Row="1" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>
