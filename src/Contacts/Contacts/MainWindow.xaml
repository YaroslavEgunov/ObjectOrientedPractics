<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:ViewModel="clr-namespace:View.ViewModel" x:Class="Contacts.MainWindow"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="550" Icon="MainWindowContact.png" ResizeMode="CanResize" MinWidth="550" MinHeight="450">
    <Window.DataContext>
        <ViewModel:MainVM/>
    </Window.DataContext>
    <Grid Margin="15">
        <GroupBox Header="Edit Contact" HorizontalAlignment="Left" Padding="3" Width="250" Margin="0,0,0,31">
            <StackPanel VerticalAlignment="Top">
                <Label Content="Name:"/>
                <TextBox Height="20" Text="{Binding Contact.Name, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="PhoneNumber:"/>
                <TextBox Height="20" Text="{Binding Contact.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Email:"/>
                <TextBox Height="20" Text="{Binding Contact.Email, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Read Contact" HorizontalAlignment="Right" Padding="3" Width="250" Margin="0,0,0,31">
            <StackPanel VerticalAlignment="Top">
                <Label Content="Name:"/>
                <TextBlock Height="20" FontWeight="Bold" Text="{Binding Contact.Name, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="PhoneNumber:"/>
                <TextBlock Height="20" FontWeight="Bold" Text="{Binding Contact.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Email:"/>
                <TextBlock Height="20" FontWeight="Bold" Text="{Binding Contact.Email, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="Save" Height="25" Width="75" Padding="3" Margin="3" Command="{Binding SaveCommand}"/>
            <Button Content="Load" Height="25" Width="75" Padding="3" Command="{Binding LoadCommand}"/>
        </StackPanel>
    </Grid>
</Window>
